@model ApplicationSystem.ViewModels.CandidateAppliedJobsViewModel
@{
    ViewBag.Title = "ShowAppliedJobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Applied Jobs</h2>
<div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Job Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AppliedJobs != null)
            {
                for(int i = 0; i < Model.AppliedJobs.Count(); i++)
                {
                    <tr>
                        <td>@Html.ActionLink(Model.AppliedJobs.ElementAt(i), "Details", "Jobs", new { id = Model.AppliedJobsId.ElementAt(i)}, null)</td>
                        <td>@Model.Statuses.ElementAt(i) @Html.ActionLink("<Withdraw>", "WithdrawJob", "Candidates", new { id = Model.AppliedJobsId.ElementAt(i) }, null)</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

