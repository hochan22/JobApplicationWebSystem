@model ApplicationSystem.Models.Candidate
@{
    ViewBag.Title = "CandidateSignInForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign In Form</h2>

<div>
    @using (Html.BeginForm("Check", "Candidates"))
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Email)
            @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Password)
            @Html.TextBoxFor(c => c.Password, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">
            Sign In
        </button>
    }
</div>